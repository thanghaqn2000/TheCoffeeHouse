<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#6A6969"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:outlineAmbientShadowColor="#471975">
    <androidx.cardview.widget.CardView
        android:layout_width="185dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#353535"
        android:elevation="10dp">
        <ImageView
            android:id="@+id/imghinh_338"
            android:layout_width="185dp"
            android:layout_height="180dp"
            android:background="#676464"
            android:scaleType="centerCrop"
            android:src="@drawable/tradao" />
        <TextView
            android:id="@+id/txtten_338"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="190dp"
            android:gravity="center_horizontal"
            android:outlineSpotShadowColor="@android:color/holo_orange_dark"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#FAF6F6"
            android:textSize="17dp"
            android:textStyle="bold" />
        <TextView
            android:layout_gravity="left"
            android:drawableRight="@drawable/ic_baseline_add_24"
            android:id="@+id/txtgia_338"
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="220dp"
            android:gravity="center_horizontal"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#F6F8FA"
            android:textSize="17dp"
            android:textStyle="italic" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>