<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6A6969">
    <RelativeLayout
        android:id="@+id/relativeThong_338"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#353535"
        android:orientation="vertical"
        android:padding="20dp">
        <ImageView
            android:id="@+id/imageClose_338"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_close" />
        <TextView
            android:id="@+id/txvThongbao_338"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Thông báo"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_toRightOf="@id/txvThongbao_338"
            android:src="@drawable/ic_baseline_format_list_bulleted" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeThong_338">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn không có thông báo nào"
            android:textColor="#FDFDFD"
            android:textSize="20sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeThong_338">
        <Button

            android:id="@+id/button_338"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="Quay lại thông báo"
            android:textColor="#fff"
            android:textSize="20sp"
            android:background="@drawable/button_noti"/>
    </RelativeLayout>

</RelativeLayout>